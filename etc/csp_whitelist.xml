<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="frame-src">
            <values>
                <value id="novalnet_secure" type="host">secure.novalnet.de</value>
                <value id="novalnet_barzahlen" type="host">customers.barzahlen.de</value>
                <value id="novalnet_barzahlen_sandbox" type="host">customers-sandbox.barzahlen.de</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="novalnet_payport" type="host">cdn.novalnet.de</value>
                <value id="novalnet_barzahlen" type="host">cdn.barzahlen.de</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
